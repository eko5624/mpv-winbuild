pkgname=libvpx-dev
pkgver=1.12.0
pkgrel=1
pkgdesc='WebM VP8/VP9 Codec SDK'
arch=('x86_64')
url="https://chromium.googlesource.com/webm/libvpx/"
makedepends=("yasm")
license=('BSD')
source=("git+https://chromium.googlesource.com/webm/libvpx.git")
md5sums=('SKIP')

build() {
  export PATH="${TOP_DIR}/cross/bin:$PATH"
  export PKG_CONFIG_LIBDIR="${MINGW_PREFIX}/lib/pkgconfig"
  export PKG_CONFIG="pkgconf --static"
  cd $srcdir/libvpx
  export CROSS=${TARGET_ARCH}- 
  ./configure \
    --target=x86_64-win64-gcc \
    --extra-cflags='-fno-asynchronous-unwind-tables' \
    --prefix=${MINGW_PREFIX} \
    --disable-examples \
    --disable-docs \
    --disable-tools \
    --disable-unit-tests \
    --disable-decode-perf-tests \
    --disable-encode-perf-tests \
    --as=yasm
  make
}

package() {
  cd $srcdir/libvpx
  make DESTDIR=$pkgdir install
  rm -rf $pkgdir${MINGW_PREFIX}/share $pkgdir${MINGW_PREFIX}/bin
}
