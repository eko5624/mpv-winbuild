pkgname=zlib-dev
pkgver=1.2.13
pkgrel=1
pkgdesc='Compression library implementing the deflate compression method found in gzip and PKZIP'
arch=('x86_64')
url="https://github.com/madler/zlib/"
license=('ZLIB')
source=("git+https://github.com/madler/zlib.git#tag=v1.2.12"
        "zlib-1-win32-static.patch")
md5sums=('SKIP' 'SKIP')

build() {
  export PATH="${TOP_DIR}/cross/bin:$PATH"
  export PKG_CONFIG_LIBDIR="${MINGW_PREFIX}/lib/pkgconfig"
  export PKG_CONFIG="pkgconf --static"
  cd $srcdir/zlib
  export BINARY_PATH=${MINGW_PREFIX}/bin
	export INCLUDE_PATH=${MINGW_PREFIX}/include
	export LIBRARY_PATH=${MINGW_PREFIX}/lib
  patch -p1 -i $srcdir/zlib-1-win32-static.patch
  make win32/Makefile.gcc  PREFIX=x86_64-w64-mingw32- SHARED_MODE=0
}

package() {
  cd $srcdir/zlib
  DESTDIR=$pkgdir make install -f win32/Makefile.gcc  PREFIX=x86_64-w64-mingw32- SHARED_MODE=0
}
