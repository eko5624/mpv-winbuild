pkgname=davs2-dev
pkgver=1.7
pkgrel=1
pkgdesc='An open-source decoder of AVS2-P2/IEEE1857.4 video coding standard'
arch=('x86_64')
url="https://github.com/pkuvcl/davs2"
license=('GPL')
source=("git+https://github.com/pkuvcl/davs2.git")
md5sums=('SKIP')

build() {
  export PATH="${TOP_DIR}/cross/bin:$PATH"
  export PKG_CONFIG_LIBDIR="${MINGW_PREFIX}/lib/pkgconfig"
  export PKG_CONFIG="pkgconf --static"
  cd $srcdir/davs2/build/linux
  ./configure \
    --host=${TARGET_ARCH} \
    --cross-prefix=x86_64-w64-mingw32- \
    --prefix="${MINGW_PREFIX}" \
    --disable-cli
  make
}

package() {
  cd $srcdir/davs2/build/linux
  make DESTDIR=$pkgdir install
}
