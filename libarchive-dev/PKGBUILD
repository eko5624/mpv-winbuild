pkgname=libarchive-dev
pkgver=3.7.9
pkgrel=1
pkgdesc='Multi-format archive and compression library'
arch=('x86_64')
url="https://www.libarchive.org/"
makedepends=('bzip2-dev' 'expat-dev' 'libxml2-dev' 'lzo-dev' 'openssl-dev' 'xz-dev' 'zlib-dev' 'zstd-dev')
license=("BSD")
source=("git+https://github.com/libarchive/libarchive.git#tag=v$pkgver")
md5sums=('SKIP')

build() {
  cd $srcdir/libarchive
  autoreconf -fiv
  NO_CONFLTO=1 ./configure \
    --host=${TARGET_ARCH} \
    --prefix=${MINGW_PREFIX} \
    --disable-bsdtar \
    --disable-bsdcat \
    --disable-bsdcpio \
    --without-cng \
    --without-libb2 \
    --without-lz4 \
    --with-bz2lib \
    --with-expat \
    --with-iconv \
    --with-lzma \
    --with-lzo2 \
    --with-openssl \
    --with-xml2 \
    --with-zlib \
    --with-zstd \
    -DCMAKE_POLICY_VERSION_MINIMUM=3.5
  make
}
  
package() {
  cd $srcdir/libarchive
  make DESTDIR=$pkgdir install
}  
