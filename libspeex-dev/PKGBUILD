pkgname=libspeex-dev
pkgver=1.2.1
pkgrel=1
pkgdesc='A free codec for free speech'
arch=('x86_64')
url="https://speex.org/"
license=('BSD')
source=("git+https://gitlab.xiph.org/xiph/speex.git#tag=Speex-$pkgver")
md5sums=('SKIP')

build() {
  export PATH="${TOP_DIR}/cross/bin:$PATH"
  export PKG_CONFIG_LIBDIR="${MINGW_PREFIX}/lib/pkgconfig"
  export PKG_CONFIG="pkgconf --static"
  LIBS=-lwinmm
  cd $srcdir/speex
  ./configure \
    --host=${TARGET_ARCH} \
    --prefix=${MINGW_PREFIX} \
    --disable-shared
  make
}

package() {
  cd $srcdir/speex
  make DESTDIR=$pkgdir install
}
