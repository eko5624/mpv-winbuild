# Maintainer: nyfair <nyfair2012@gmail.com>
pkgname=lcms2-dev
pkgver=2.15
pkgrel=1
pkgdesc='Small-footprint color management engine, version 2'
arch=('x86_64')
url="http://www.littlecms.com/"
license=('MIT')
source=("git+https://github.com/mm2/Little-CMS")
md5sums=('SKIP')

build() {
  export PATH="/github/home/cross/bin:$PATH"
  export PKG_CONFIG_LIBDIR="/github/home/opt/lib/pkgconfig"
  export PKG_CONFIG="pkgconf --static"
  cd $srcdir/Little-CMS
  ./configure \
    --host=x86_64-w64-mingw32 \
    --prefix=/github/home/opt \
    --disable-shared
  make
}

package() {
  cd $srcdir/Little-CMS
  make DESTDIR=$pkgdir install
  rm -rf $pkgdir/opt/share $pkgdir/opt/bin
}
