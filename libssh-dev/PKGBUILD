pkgname=libssh-dev
pkgver=0.10.5
pkgrel=1
pkgdesc='Library for accessing ssh client services through C libraries'
arch=('x86_64')
url="https://www.libssh.org/"
makedepends=('zlib-dev' 'mbedtls-dev')
license=('LGPL')
options=('strip')
source=("git+https://git.libssh.org/projects/libssh.git")
md5sums=('SKIP')

build() {
  export PATH="/github/home/cross/bin:$PATH"
  export PKG_CONFIG_LIBDIR="/github/home/opt/lib/pkgconfig"
  export PKG_CONFIG="pkgconf --static"
  cd $srcdir/libssh
  export ZLIB_ROOT=/github/home/opt
  export CFLAGS="$CFLAGS -DMBEDTLS_ALLOW_PRIVATE_ACCESS -DMBEDTLS_THREADING_C -DMBEDTLS_THREADING_PTHREAD"
  rm -rf build && mkdir build && cd build
  cmake .. \
    -DCMAKE_INSTALL_PREFIX="/github/home/opt" \
    -DCMAKE_TOOLCHAIN_FILE=../../../toolchain.cmake \
    -DCMAKE_BUILD_TYPE=Release \
    -DWITH_ZLIB=ON \
    -DWITH_MBEDTLS=ON \
    -DMBEDTLS_INCLUDE_DIR='/github/home/opt/include' \
    -DWITH_EXAMPLES=OFF \
    -DBUILD_SHARED_LIBS=OFF \
    -DBUILD_STATIC_LIB=ON
  make
}

package() {
  cd $srcdir/libssh/build
  make DESTDIR=$pkgdir install
  echo "Libs.private: -lmbedtls -lmbedx509 -lmbedcrypto -lz -lwsock32 -lws2_32 -lpthread" >> $pkgdir${MINGW_PREFIX}/lib/pkgconfig/libssh.pc
  echo "Cflags.private: -DLIBSSH_STATIC" >> $pkgdir${MINGW_PREFIX}/lib/pkgconfig/libssh.pc
}
