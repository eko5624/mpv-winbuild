pkgname=libdvdcss-dev
pkgver=1.4.3
pkgrel=1
pkgdesc='Portable abstraction library for DVD decryption'
arch=('x86_64')
url="https://www.videolan.org/developers/libdvdcss.html"
license=('GPL')
source=("git+https://code.videolan.org/videolan/libdvdcss.git")
md5sums=('SKIP')

build() {
  cd $srcdir/libdvdcss
  NO_CONFLTO=1 meson setup build \
    --prefix="${MINGW_PREFIX}" \
    --libdir=${MINGW_PREFIX}/lib \
    --cross-file=../../../cross.meson \
    --buildtype=release \
    --default-library=static
  meson compile -C build
}

package() {
  cd $srcdir/libdvdcss
  DESTDIR=$pkgdir meson install -C build
}
