pkgname=lame-dev
pkgver=3.100
pkgrel=1
pkgdesc='A high quality MPEG Audio Layer III (MP3) encoder'
arch=('x86_64')
url="http://lame.sourceforge.net/"
license=('LGPL')
source=("git+https://github.com/eko5624/lame.git")
md5sums=('SKIP')

build() {
  export CFLAGS+=" -msse2"
  cd $srcdir/lame
  NO_CONFLTO=1 ./configure \
    --host=${TARGET_ARCH} \
    --prefix=${MINGW_PREFIX} \
    --disable-shared \
    --enable-nasm \
    --disable-frontend
}

package() {
  cd $srcdir/lame
  make DESTDIR=$pkgdir install
  rm -rf $pkgdir${MINGW_PREFIX}/share
}
