pkgname=libsixel-dev
pkgver=1.10.3
pkgrel=1
pkgdesc='Encoder/decoder implementation for DEC SIXEL graphics'
arch=('x86_64')
url="https://github.com/libsixel/libsixel"
makedepends=('libjpeg-dev' 'libpng-dev' 'zlib-dev')
license=('BSD')
source=("git+https://github.com/libsixel/libsixel")
md5sums=('SKIP')

build() {
  export PATH="${TOP_DIR}/cross/bin:$PATH"
  export PKG_CONFIG_LIBDIR="${MINGW_PREFIX}/lib/pkgconfig"
  export PKG_CONFIG="pkgconf --static"
  cd $srcdir/libsixel   
  meson setup build \
    --prefix="${MINGW_PREFIX}" \
    --libdir=${MINGW_PREFIX}/lib \
    --cross-file=../../../cross.meson \
    --buildtype=release \
    --default-library=static \
    -Djpeg=enabled \
    -Dpng=enabled \
    -Dimg2sixel=disabled \
    -Dsixel2png=disabled \
    -Dgdk-pixbuf2=disabled \
    -Dpython=disabled \
    -Dtests=disabled
  meson compile -C build 
}

package() {
  cd $srcdir/libsixel
  DESTDIR=$pkgdir meson install -C build
}
