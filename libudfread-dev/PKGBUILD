pkgname=libudfread-dev
pkgver=1.1.2
pkgrel=1
pkgdesc='Library to access Blu-Ray disks for video playback'
arch=('x86_64')
url="https://code.videolan.org/videolan/libudfread"
license=('LGPL')
source=("git+https://code.videolan.org/videolan/libudfread.git")
md5sums=('SKIP')

build() {
  cd $srcdir/libudfread
  NO_CONFLTO=1 meson setup build \
    --prefix="${MINGW_PREFIX}" \
    --libdir=${MINGW_PREFIX}/lib \
    --cross-file=./package/crossfiles/x86_64-w64-mingw32.meson \
    --buildtype=release \
    --default-library=static \
    -Denable_examples=false
  meson compile -C build
}

package() {
  cd $srcdir/libudfread
  DESTDIR=$pkgdir meson install -C build
}
