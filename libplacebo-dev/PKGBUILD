# Maintainer: nyfair <nyfair2012@gmail.com>
pkgname=libplacebo-shared-dev
pkgver=7.349.0
pkgrel=1
pkgdesc='A Free Implementation of the Unicode Bidirectional Algorithm'
arch=('x86_64')
url="https://github.com/haasn/libplacebo/"
makedepends=('lcms2-dev' 'libdovi-dev' 'shaderc-dev' 'spirv-cross-dev' 'vulkan-shared-dev' 'xxhash-dev')
license=('LGPL')
source=("git+https://github.com/haasn/libplacebo.git"
        "git+https://github.com/Dav1dde/glad.git"
        "git+https://github.com/fastfloat/fast_float.git")
md5sums=('SKIP' 'SKIP' 'SKIP')

build() {
  LDFLAGS+=' -static-libgcc'
  cd $srcdir/libplacebo
  rm -rf 3rdparty/glad
  rm -rf 3rdparty/fast_float
  mv $srcdir/glad 3rdparty
  mv $srcdir/fast_float 3rdparty
  NO_CONFLTO=1 meson setup build \
    --prefix="${MINGW_PREFIX}" \
    --libdir=${MINGW_PREFIX}/lib \
    --cross-file=../../../cross.meson \
    --buildtype=release \
    --default-library=shared \
    -Ddemos=false \
    -Dvulkan-registry="${MINGW_PREFIX}/share/vulkan/registry/vk.xml"
  ninja -C build
}

package() {
  cd $srcdir/libplacebo
  DESTDIR=$pkgdir ninja install -C build
  strip $pkgdir${MINGW_PREFIX}/bin/libplacebo*.dll
}
