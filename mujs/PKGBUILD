pkgname=mujs-dev
pkgver=1.3.3
pkgrel=1
pkgdesc='An embeddable Javascript interpreter in C'
arch=('x86_64')
url="http://mujs.com/"
license=('ISC')
source=("git+https://github.com/ccxvii/mujs.git"
        "https://raw.githubusercontent.com/shinchiro/mpv-winbuild-cmake/master/packages/mujs-0001-add-exe-to-binary-name.patch")
md5sums=('SKIP' 'SKIP')

build() {
  export PATH="${TOP_DIR}/cross/bin:$PATH"
  export PKG_CONFIG_LIBDIR="${MINGW_PREFIX}/lib/pkgconfig"
  export PKG_CONFIG="pkgconf --static"
  cd $srcdir/mujs
  mkdir build
  patch -p1 -i $srcdir/mujs-0001-add-exe-to-binary-name.patch
  make \
    CFLAGS='-UHAVE_READLINE' LIBREADLINE='' \
    CC=${TARGET_ARCH}-gcc \
    AR=${TARGET_ARCH}-ar \
    RANLIB=${TARGET_ARCH}-ranlib \
    OUT=build \
    prefix=${MINGW_PREFIX} \
    host=mingw
}

package() {
  cd $srcdir/mujs
  make \
    CFLAGS='-UHAVE_READLINE' LIBREADLINE='' \
    CC=${TARGET_ARCH}-gcc \
    AR=${TARGET_ARCH}-ar \
    RANLIB=${TARGET_ARCH}-ranlib \
    OUT=build \
    prefix=${MINGW_PREFIX} \
    host=mingw \
    DESTDIR=$pkgdir install
}
