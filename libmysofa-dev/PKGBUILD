pkgname=libmysofa-dev
pkgver=1.3.1
pkgrel=1
pkgdesc='Reader for AES SOFA files to get better HRTFs'
arch=('x86_64')
url="https://github.com/hoene/libmysofa/"
makedepends=('zlib-dev')
license=('BSD')
source=("git+https://github.com/hoene/libmysofa.git")
md5sums=('SKIP')

build() {
  export PATH="${TOP_DIR}/cross/bin:$PATH"
  export PKG_CONFIG_PATH="/github/home/opt/lib/pkgconfig"
  export PKG_CONFIG="pkgconf --static" 
  cd $srcdir/libmysofa
  export ZLIB_ROOT_DIR="${MINGW_PREFIX}"
  rm -rf out && mkdir out && cd out
  cmake .. -G Ninja \
    -DCMAKE_INSTALL_PREFIX="${MINGW_PREFIX}" \
    -DCMAKE_TOOLCHAIN_FILE=../../../toolchain.cmake \
    -DCMAKE_BUILD_TYPE=Release \
    -DBUILD_SHARED_LIBS=OFF \
    -DBUILD_TESTS=OFF
  ninja
}

package() {
  cd $srcdir/libmysofa/out
  DESTDIR=$pkgdir ninja install
}
